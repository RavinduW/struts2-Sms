<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts> 
    <!-- Configuration for the default package. -->
    <package name="systemuser" extends="struts-default,default">
             
        <action name="login" method="login" class="com.pkg.actions.SystemUserActions">
            <result name="admin">adminPages/adminHome.jsp</result>
            <result name="student"></result>
            <result name="404">/error.jsp</result>
        </action> 
        
        <action name="logOut" method="logOut" class="com.pkg.actions.SystemUserActions">
            <result name="success">/index.jsp</result>
        </action>
        
        <action name="save" method="save" class="com.pkg.actions.SystemUserActions">
            <result name="success">/index.jsp</result>
            <result name="error">/error.jsp</result>
        </action>
                                     
    </package> 

</struts>